@model EServices.Models.GradeSetting.GradeSetting

@{
    ViewBag.Title = "Index";
}

<div>
    <h4>Grade Setting</h4>
    <hr />
    <p>
        <a href="#" onclick="update()" class="btn btn-info">Update</a>
    </p><hr />
    <img src="~/AppFolder/GIF/giphy.gif" width="100" height="100" style="display:none" id="loader" />
   <table class="table table-condensed">
       <tr>
           <th>Passing Marks</th>
           <th>Fair Grade</th>
           <th>Good Grade</th>
           <th>Excellent Grade</th>
           <th>OutStanding Grade</th>
       </tr>
       <tr>
           <td>@Model.PassingMarks</td>
           <td>@Model.Fair_Grade</td>
           <td>@Model.good_Grade</td>
           <td>@Model.Excellent_Grade</td>
           <td>@Model.OutStanding_Grade</td>
       </tr>
   </table>

</div>
<div class="modal modal-right fade" id="addEditModal" data-backdrop="static" tabindex="-1">
    <div class="modal-dialog" style="width:70%;">
        <div class="modal-content ">
            <div class="modal-header">
                <a href="#" data-dismiss="modal" class="close">&times;</a>
                <div class="modal-title" id="title">
                    <h4>Add/Edit Record</h4>
                </div>
            </div>
            <div class="modal-body" id="addModalBody">

            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>
    function update() {
        $('#loader').show();
        var url = "/GradeSetting/UpdateGrade";
        $('#addModalBody').load(url, function () {
            $('#addEditModal').modal('show');
            $('#loader').hide();

        })
    }
</script>
